<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_layout_container_item_layout_chat_my_self"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/vertical_margin_8dp"
    android:paddingBottom="@dimen/vertical_margin_8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_view_date_time_item_layout_chat_my_self"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="false"
            android:layout_gravity="bottom"
            android:text="2018-05-12 13:05"
            android:textStyle="italic" />

        <RelativeLayout
            android:id="@+id/background_layout_chat_my_self"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_chat_my_self"
            android:paddingLeft="@dimen/horizontal_margin_8dp"
            android:paddingTop="@dimen/vertical_margin_8dp"
            android:paddingRight="@dimen/horizontal_margin_8dp"
            android:paddingBottom="@dimen/vertical_margin_8dp"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/text_view_message_item_layout_chat_my_self"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="false"
                android:layout_marginStart="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="5dp"
                android:text="Message"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="45dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="#00000000"
                app:cardCornerRadius="25dp">

                <ImageView
                    android:id="@+id/image_view_message_item_layout_chat_my_self"
                    android:layout_width="192dp"
                    android:layout_height="192dp" />
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>