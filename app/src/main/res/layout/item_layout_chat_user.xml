<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative_layout_container_item_layout_chat_user"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/vertical_margin_8dp"
    android:paddingTop="@dimen/vertical_margin_8dp">

    <RelativeLayout
        android:id="@+id/background_layout_chat_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="100dp"
        android:background="@drawable/background_chat_user"
        android:paddingLeft="@dimen/horizontal_margin_8dp"
        android:paddingTop="@dimen/vertical_margin_8dp"
        android:paddingRight="@dimen/horizontal_margin_8dp"
        android:paddingBottom="@dimen/vertical_margin_8dp"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/text_view_message_item_layout_chat_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:text="Message"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/image_view_message_item_layout_chat_user"
            android:layout_width="192dp"
            android:layout_height="192dp"
            android:layout_margin="25dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/text_view_date_time_item_layout_chat_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/background_layout_chat_user"
        android:layout_marginBottom="-7dp"
        android:layout_toRightOf="@id/background_layout_chat_user"
        android:text="12-05-2018 16:22"
        android:textColor="@color/colorBlack"
        android:textStyle="italic" />

</RelativeLayout>