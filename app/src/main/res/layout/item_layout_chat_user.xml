<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative_layout_container_item_layout_chat_user"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/vertical_margin_8dp"
    android:paddingTop="@dimen/vertical_margin_8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/background_layout_chat_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_chat_user"
            android:paddingLeft="@dimen/horizontal_margin_8dp"
            android:paddingTop="@dimen/vertical_margin_8dp"
            android:paddingRight="@dimen/horizontal_margin_8dp"
            android:paddingBottom="@dimen/vertical_margin_8dp"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/text_view_message_item_layout_chat_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="5dp"
                android:text="Message"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/image_view_message_item_layout_chat_user"
                android:layout_width="192dp"
                android:layout_height="192dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="45dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="10dp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/text_view_date_time_item_layout_chat_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="12-05-2018 16:22"
            android:textStyle="italic" />

    </LinearLayout>

</RelativeLayout>